    <class name="model.impl.databaseImpl.ontology.resources.applications.ApplicationActivityImpl"
           table="ApplicationActivity" abstract="true" lazy="false">
        <id name="id" unsaved-value="-1">
            <generator class="increment"/>
        </id>

        <discriminator column="ActivityType" type="string"/>

        <property name="CPURequiredValue" column="CPURequiredValue" type="java.lang.Double"/>
        <property name="CPUAllocatedValue" column="CPUAllocatedValue" type="java.lang.Double"/>
        <property name="HDDRequiredValue" column="HDDRequiredValue" type="java.lang.Double"/>
