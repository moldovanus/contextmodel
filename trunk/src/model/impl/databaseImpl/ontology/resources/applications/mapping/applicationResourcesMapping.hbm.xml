        <property name="MEMRequiredValue" column="MEMRequiredValue" type="java.lang.Double"/>
        <property name="performanceEstimation" column="performanceEstimation" type="java.lang.Double"/>
        <property name="performanceDegradation" column="performanceDegradation" type="java.lang.Double"/>

        <subclass name="CPUIntensiveActivityImpl" discriminator-value="CPU">
            <join table="CPUIntensiveActivity">
                <key column="UID"/>
            </join>
        </subclass>
        <subclass name="HDDIntensiveActivityImpl" discriminator-value="HDD">
            <join table="HDDIntensiveActivity">
                <key column="UID"/>
            </join>
        </subclass>
        <subclass name="MEMIntensiveActivityImpl" discriminator-value="MEM">
            <join table="MEMIntensiveActivity">
                <key column="UID"/>
            </join>
        </subclass>

    </class>
