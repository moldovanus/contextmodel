<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!--<property name="connection.url">jdbc:mysql://localhost:3306/ContextModel</property>-->
        <!--<property name="connection.driver_class">com.mysql.jdbc.Driver</property>-->
        <!--<property name="connection.username">root</property>-->
        <!--<property name="connection.password">123456</property>-->
        <!--<property name="dialect">org.hibernate.dialect.MySQLDialect</property>-->

        <property name="connection.driver_class">org.hsqldb.jdbcDriver</property>
        <property name="connection.url">jdbc:hsqldb:mem:contextmodel</property>
        <!--<property name="connection.url">jdbc:hsqldb:hsql://localhost</property>-->
        <property name="connection.username">sa</property>
        <property name="connection.password"></property>
        <property name="dialect">org.hibernate.dialect.HSQLDialect</property>


        <!-- DB schema will be updated if needed -->
        <property name="hbm2ddl.auto">update</property>
        <!-- SQL dialect -->


        <property name="current_session_context_class">thread</property>
        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">false</property>
        <property name="hibernate.cache.use_query_cache">true</property>
        <property name="hibernate.cache.use_second_level_cache">true</property>
        <property name="hibernate.generate_statistics">true</property>

        <property name="net.sf.ehcache.configurationResourceName">
            /model/impl/databaseImpl/dao/ehcache_config.xml
        </property>

        <property name="hibernate.cache.provider_class">
            net.sf.ehcache.hibernate.SingletonEhCacheProvider
        </property>


        <!--Mapping files -->

        <mapping resource="model/impl/databaseImpl/ontology/resources/mapping/resourcesMapping.hbm.xml"/>
        <mapping
                resource="model/impl/databaseImpl/ontology/resources/applications/mapping/applicationResourcesMapping.hbm.xml"/>
        <mapping resource="model/impl/databaseImpl/ontology/actions/mapping/actionsMapping.hbm.xml"/>
        <mapping resource="model/impl/databaseImpl/ontology/policies/mapping/policies.hbm.xml"/>

    </session-factory>
</hibernate-configuration>